#include <iostream>
using namespace std;
class crectangle{
private:
    short widgh ,height;
    friend crectangle doplicate(crectangle );
public:
    void set_values(short a,short b){
        widgh=a;
        height=b;  }
    int area(){
        return (height*widgh); }
};
    crectangle doplicate (crectangle h){
    crectangle t;
    t.widgh=h.widgh * 2;
    t.height=h.height * 2;
    return t; }
int main () {
    short x=1,y=1;
    cout<<"enter the base "<<endl;
    cin>>x;
    cout<<"enter the height "<<endl;
    cin>>y;
    crectangle rect,rectb;
    rect.set_values(x,y);
    cout<<"the area"<<rect.area()<<endl;
    rectb =doplicate(rect);
    cout<<"the area"<<rectb.area()<<endl;
    return 0;
}
